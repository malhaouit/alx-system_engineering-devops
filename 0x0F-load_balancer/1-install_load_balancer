#!/usr/bin/env bash
# Install and configure HAProxy on lb-01 server

# Exit if any command fails
set -e

# Ensure the script is run as root
if [ "$(id -u)" != "0" ]; then
	echo "This script must be run as root." >&2
	exit 1
fi

echo "Installing HAProxy..."
apt-get update -y
apt-get install -y haproxy

echo "Configuring HAProxy for load balancing..."
# Backup the current HAProxy configuration
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.backup

STUDENT_ID=512139

# Update HAProxy configuration
cat << EOF >> /etc/haproxy/haproxy.cfg

frontend http_front
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server ${STUDENT_ID}-web-01 54.174.153.120:80 check
    server ${STUDENT_ID}-web-02 18.204.14.78:80 check
EOF

echo "ENABLED=1" | sudo dd status=none of=/etc/default/haproxy

echo "configured - Roundrobin On web-01 & web-02"

if [ "$(pgrep -c haproxy)" -le 0 ]; then
	sudo service haproxy start
else
	sudo service haproxy restart
fi
